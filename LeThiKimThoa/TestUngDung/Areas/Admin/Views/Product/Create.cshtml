@model ModelEF.Model.Product

@{
    ViewBag.Title = "Thêm mới sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header {
    <i class="fa fa-save"></i>&nbsp;Thêm mới sản phẩm
}
<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "Product")
</div>
@using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="text-success">
            @ViewBag.CreateProError
        </div>
        <div class="form-group col-lg-5">
            @Html.LabelFor(model => model.ID, htmlAttributes: new { style = "font-weight: bold" })<span style="color: red">*</span>
            @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập mã sản phẩm..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.ID)</div>

            @Html.LabelFor(model => model.Name, "Tên sản phẩm", htmlAttributes: new { style = "font-weight: bold" })<span style="color: red">*</span>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên sản phẩm..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.Name)</div>

            @Html.LabelFor(model => model.UnitCost, "Đơn giá", htmlAttributes: new { style = "font-weight: bold" })<span style="color: red">*</span>
            @Html.EditorFor(model => model.UnitCost, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập giá của sản phẩm..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.UnitCost)</div>

            @Html.LabelFor(model => model.Quantity, "Số lượng", htmlAttributes: new { style = "font-weight: bold" })<span style="color: red">*</span>
            @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập số lượng của sản phẩm..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.Quantity)</div>

            @Html.LabelFor(model => model.ProTypeId, "Loại sản phẩm", htmlAttributes: new { style = "font-weight: bold" })<span style="color: red">*</span>
            @Html.DropDownListFor(model => model.ProTypeId, ViewBag.typeListCreate as SelectList, new { @class = "form-control" })

            @Html.LabelFor(model => model.Image, "Hình ảnh", htmlAttributes: new { style = "font-weight: bold" })<span style="color: red">*</span>
            <input type="file" id="file" name="file" />
            <div class="text-danger">@ViewBag.HinhAnh</div>

            @Html.LabelFor(model => model.Description,"Mô tả sản phẩm", htmlAttributes: new { style = "font-weight: bold" })
            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @placeholder = "Nhập mô tả sản phẩm..." })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.Description)</div>

            @Html.LabelFor(model => model.Status, "Trạng thái", htmlAttributes: new { style = "font-weight: bold" })
            @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập trạng thái của sản phẩm..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.Status)</div>

            <br />
            <input type="submit" value="Thêm mới" class="btn btn-default" />
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
