                                <div class="productinfo text-center">
                                    <img src="@item.Image" width="50" height="250" />
                                    <h2>@Html.DisplayFor(modelItem => item.UnitCost)</h2>
                                    <p>@Html.DisplayFor(modelItem => item.Name)</p>


